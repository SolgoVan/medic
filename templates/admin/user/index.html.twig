{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
{% include "_partials/_nav_top.html.twig" %}
<div class="container">
    <div class="row">
        {% include "_partials/_adminnav.html.twig" %}
        <main class="col-9 border border-light bg-white p-2">
            <h1>Liste des utilisateurs</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Role</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Date de naissance</th>
                        <th>Email</th>
                        <th>Date de création</th>
                        <th>Valide</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{user.id}}</td>
                            <td>
                                {% for roles in user.roles %}
                                    {% if roles == "ROLE_ADMIN" %}
                                        {% set name = "Administrateur" %}
                                        {% set color = "warning" %}
                                    {% else %}
                                        {% set name = "Utilisateur" %}
                                        {% set color = "success" %}
                                    {% endif %}
                                    <span class="badge bg-{{color}}">{{name}}</span>
                                {% endfor %}
                                
                            </td>
                            <td>{{user.lastname}}</td>
                            <td>{{user.firstname}}</td>
                            <td>{{user.birthDate|date ('d/m/Y')}}</td>
                            <td>{{user.email}}</td>
                            <td>{{user.createdAt|date ('d/m/Y')}}</td>
                            <td>
                                <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="switch{{ user.id }}" {{ user.isValidAccount ? "checked" : "" }} disabled>
                                        <label class="form-check-label" for="switch{{ user.id }}"></label>
                                    </div>
                            </td>
                            <td>
                                <a href="#" class="btn btn-primary btn-sm">Modifier</a>
                                <a href="#" class="btn btn-danger btn-sm">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </main>
    </div>
</div>
{% endblock %}
