{% extends 'base.html.twig' %}

{% block title %}Nouveau patient
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('Assets/css/style.css')}}">
{% endblock %}

{% block javascripts %}
	<script src="{{asset('Assets/js/script.js')}}"></script>
{% endblock %}

{% block body %}
	{% include "_partials/_nav_top.html.twig" %}
	{% include "_partials/_nav_patient.html.twig" %}
	<div class="container">
		<div class="row bg-shadeblue mt-3 rounded-top">
			<div class="col-4 fs-2 mt-2 text-light">Détail de
			{{patients.patientsIdentities.lastname}}
			{{patients.patientsIdentities.firstname}}</div>
			<div class="col-1"></div>
			<div class="col-4 fs-4 mt-3 text-light">Dossier créer par {{patients.createdBy.lastname}} {{patients.createdBy.firstname}}</div>
			{% set my_timezone = 'Europe/Paris' %}
			<div class="col-3 fs-4 mt-3 text-light">Le {{patients.createdAt|date ('d/m/Y')}}</div>
		</div>
		<h2 class="mt-2 text-center"></h2>
		<hr>
		<div class="tabs">
			<ul class="list">
				<li class="tab active" data-target="#content1">Information général</li>
				<li class="tab" data-target="#content2">Informations physique</li>
				<li class="tab" data-target="#content3">Pathologies</li>
				<li class="tab" data-target="#content4">Addictions</li>
				<li class="tab" data-target="#content5">Don du sang</li>
				<li class="tab" data-target="#content6">Dossier médical</li>
			</ul>
			<div class="contents">
				<div class="content" id="content1">
					<h3>Informations général</h3>
					<div>
						<div class="row">
							<div class="col-6">
								<div class="row">
									<h4>Identité du patient</h4>
								</div>
								<div class="row">
									<div class="col-6">Nom :</div>
									<div class="col-6">{{patients.patientsIdentities.lastname}}</div>
								</div>
								<div class="row">
									<div class="col-6">Prénom :</div>
									<div class="col-6">{{patients.patientsIdentities.firstname}}</div>
								</div>
								<div class="row">
									<div class="col-6">Date de naissance</div>
									<div class="col-6">{{patients.patientsIdentities.birthDate|date ('d/m/Y')}}</div>
								</div>
								<div class="row">
									<div class="col-6">Genre :</div>
									{#<div class="col-6">{{patients.patientsIdentities.genre}}</div>#}
								</div>
								<div class="row">
									<div class="col-6">Téléphone :</div>
									<div class="col-6">{{patients.patientsIdentities.phone}}</div>
								</div>
								<div class="row">
									<div class="col-6">E-mail :</div>
									<div class="col-6">{{patients.patientsIdentities.email}}</div>
								</div>
								<div class="row">
									<div class="col-6">Profession :</div>
									<div class="col-6">{{patients.patientsIdentities.occupation}}</div>
								</div>
								<div class="row">
									<div class="col-6">Employeur :</div>
									<div class="col-6">{{patients.patientsIdentities.employer}}</div>
								</div>
							</div>
							<div class="col-6">
								<div class="row">
									<h4>Personne à contacter en cas d'urgence</h4>
								</div>
								<div class="row">
									<div class="col-6">Nom :</div>
									<div class="col-6">{{patients.emergencyPerson.lastname}}</div>
								</div>
								<div class="row">
									<div class="col-6">Prénom :</div>
									<div class="col-6">{{patients.emergencyPerson.firstname}}</div>
								</div>
								<div class="row">
									<div class="col-6">Téléphone</div>
									<div class="col-6">{{patients.emergencyPerson.phone}}</div>
								</div>
								<div class="row">
									<div class="col-6">Commentaire :</div>
									<div class="col-6">{{patients.emergencyPerson.comment}}</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="content" id="content2">
					<h3>Informations physique</h3>
					<div class="row">
						<div class="col-3">Taille :</div>
						<div class="col-3">{{patients.measurement.size}}
							cm</div>
					</div>
					<div class="row">
						<div class="col-3">Poids :</div>
						<div class="col-3">{{patients.measurement.weight}}
							kg</div>
					</div>
					<div class="row">
						<div class="col-3">Groupe sanguin</div>
						<div class="col-3">{{patients.bloodGroup.bloodGroup}}</div>
					</div>
				</div>
				<div class="content" id="content3">
					<h3>Pathologies</h3>
