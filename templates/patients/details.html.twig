                    </div>
                    <div class="row">
                        <div class="col-3">Alcool :</div>
                        <div class="col-3">{{patients.addiction.alcohol}}</div>
                    </div>
                    <div class="row">
                        <div class="col-3">Drogue :</div>
                        <div class="col-3">{{patients.addiction.drug}}</div>
                    </div>
                    <div class="row">
                        <div class="col-3">Autre :</div>
                        <div class="col-3">{{patients.addiction.other}}</div>
                    </div>
				</div>
				<div class="content" id="content5">
					<h3>Don du sang</h3>
				</div>
				<div class="content" id="content6">
					<h3>Dossier médical</h3>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
